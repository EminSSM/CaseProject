@model IEnumerable<TblData> 
@{

    ViewData["Title"] = "Home Page";
}


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Yaşadığı Şehir</th>
            <th scope="col">Oluşturulma Tarihi</th>
            <th scope="col">Doğum Yılı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.City</td>
                <td>@item.CreatedDate</td>
                <td>@item.BirthYear</td>
                <td>
                    <form asp-controller="Home" asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bu öğeyi silmek istediğinizden emin misiniz?')">Sil</button>
                    </form>
                </td>
                <td>
                    <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Güncelle</a>
                </td>
            </tr>
        }
      
    </tbody>
</table>
<div class="container">
    <a asp-controller="Home" asp-action="New" class="btn btn-secondary">Ekle</a>
    <a asp-controller="Home" asp-action="BirthDatePersonCount" class="btn btn-info">Doğum Yılına Göre Kişi Sayısı</a>
    <a asp-controller="Home" asp-action="CreatedDateFilter" class="btn btn-warning">Oluşturulma Tarihine Göre Kayıtları Getir</a>
</div>
