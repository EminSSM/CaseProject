@model TblData
@{
    ViewData["Title"] = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Home" asp-action="Insert" method="post">
    <div class="mb-3">
        <label class="form-label">Adı</label>
        <input type="text" class="form-control" asp-for="@Model.Name">
    </div>
    <div class="mb-3">
        <label class="form-label">Soyadı</label>
        <input type="text" class="form-control" asp-for="@Model.Surname">
    </div>
    <div class="mb-3">
        <label class="form-label">Yaşadığı İl</label>
        <input type="text" class="form-control" asp-for="@Model.City">
    </div>
    <div class="mb-3">
        <label class="form-label">Doğum Yılı</label>
        <input type="text" class="form-control" asp-for="@Model.BirthYear">
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

